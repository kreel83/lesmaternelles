<div class="container" style="margin-top: 60px;background-color:transparent;">

  <div class="row justify-content-center">
     <% @categories.each do |categorie| %>
      <div class="col-md-1">
          <div class="section" style="background-color:<%= categorie.color %>;color: <%= categorie.texte %>" data-section="<%= categorie.id %>">
              <%= image_tag 'logo/'+categorie.logo, style: "width: 50px;color: white" %>
          </div>
      </div>
    <% end %>
  </div>
  <hr>
  <div class="row justify-content-center">
  <% @activites.each do | activite |  %>

      <div class="col-md-3 m-3 card-product-cat cat<%= activite.categorie_id %> ">

        <div class="cat" style="background-color:<%= activite.categorie.color %>;">
          <div class="notation">notation</div>
          <div class="notation-content">
            <button class="btn btn-sm btn-danger">notes</button>
          </div>
          <div class="video">m√©dia</div>
          <div class="video-content">
            <button class="btn btn-sm btn-primary">ajouter</button>
          </div>

        </div>

        <div class="content">
          <div class="img">
            <% if activite.photo != '' %>
              <%= image_tag 'items/'+activite.photo  %>
            <% end %>
          </div>

          <div class="card-product-infos">
            <p><%= activite.titre %> </p>
          </div>

        </div>
      </div>

  <% end %>
  </div>
</div>