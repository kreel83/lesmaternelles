<div class="container" style="margin-top: 60px">
  <div class="row">
    <% @enfants.each do |enfant| %>
      <div class="col-md-4 mb-4">
        <div class="card-product" style="display: flex;flex-direction: column;">
          <div class="haut" style="width:100%;display: flex;justify-content: right">
            <%= link_to enfant_path(enfant) do %>
              <i class="fas fa-edit"></i>
            <% end %>
          </div>
          <div class="bas" style="display: flex;flex-direction: row;justify-content: space-around">
            <% if enfant.photo.nil? %>

              <%= link_to enfant_activites_path(enfant) do %>
                <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg"/>
              <% end %>

            <% else %>

              <%= link_to enfant_activites_path(enfant) do %>
                <%= cl_image_tag(enfant.photo, :width => 400, :crop => "fit", folder: "lesmaternelles/mj@test.fr/eleves") %>
              <% end %>

            <% end %>




            <div class="card-product-infos">
              <h2><%= enfant.prenom %> <strong><%= enfant.nom %></strong></h2>
              <p>Groupe <strong><%= enfant.groupe %></strong></p>
            </div>
          </div>



        </div>
      </div>
    <% end %>
  </div>
</div>