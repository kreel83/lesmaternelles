<div class="container" style="margin-top: 66px;">

  <div class="row">

    <div class="col-md-8">
      <div class="selection" style="display: flex;flex-wrap: wrap;padding: 24px">
        <% @correspondance.enfants.each do |enfant| %>
          <div class="tag" style="text-align:center;margin:4px;font-size: 0.6rem;padding: 2px;background-color:cornflowerblue;color: white;border-radius: 8px;width: 80px">
            <%= "#{@enfants.find(enfant).prenom} #{@enfants.find(enfant).nom[0]}" %>
          </div>
        <% end %>
      </div>
      <%= simple_form_for @correspondance do |f|  %>
        <input type="hidden" value="<%= @enfantsSelect %>" name="enfants" id="enfants" disabled>
        <div class="custom-control custom-switch">
          <input type="checkbox" class="custom-control-input" id="customSwitches" name="reception" disabled="">
          <label class="custom-control-label" for="customSwitches">Accusé réception</label>
        </div>
        <div class="form-group">
          <%= f.input :sujet, disabled: true %>
          <%= f.input :body, disabled: true %>

        </div>




      <% end %>
      <hr>
      <%= link_to 'supprimer', correspondance_path(@correspondance), :method=> 'DELETE', class: 'btn btn-danger' %>
    </div>
  </div>
</div>